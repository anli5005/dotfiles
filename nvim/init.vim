" indentation
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

" appearance
set number
highlight LineNr ctermfg=238
highlight MatchParen ctermbg=242
syntax enable
set showmatch
set background=dark

" behavior
set whichwrap+=<,>,h,l,[,]
set mouse=a
set clipboard=unnamed

